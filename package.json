{
  "name": "API-Pasteleria",
  "version": "1.0.0",
  "type": "module",
  "description": "A praquite API usign DDD pattern with Express, TypeScript, and Turso.",
  "main": "app.ts",
  "scripts": {
    "dev": "tsx --watch src/app.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/app.js",
    "lint": "eslint .",
    "test:load:basic": "artillery run tests/load/basic-load.yml",
    "test:load:auth": "artillery run tests/load/auth-stress.yml",
    "test:load:graphql": "artillery run tests/load/graphql-test.yml",
    "test:load:rate-limit": "artillery run tests/load/rate-limit-test.yml",
    "test:load:realistic": "artillery run tests/load/realistic-workload.yml",
    "test:load:report": "artillery run --output tests/reports/load-report.json tests/load/basic-load.yml && node tests/scripts/analyze-results.js tests/reports/load-report.json"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.12.3",
  "dependencies": {
    "@libsql/client": "^0.15.9",
    "@scalar/express-api-reference": "^0.8.7",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "connect-timeout": "^1.9.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dataloader": "^2.2.3",
    "dotenv": "^16.5.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-base-typescript": "^1.1.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "graphql": "^16.11.0",
    "graphql-http": "^1.22.4",
    "graphql-tools": "^9.0.18",
    "graphql-yoga": "^5.14.0",
    "jsonwebtoken": "^9.0.2",
    "node-cache": "^5.1.2",
    "pino": "^9.7.0",
    "remove": "^0.1.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tsconfig-paths": "^4.2.0",
    "vercel": "^44.5.0",
